{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{title}}</strong></td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                class="btn btn-success"
                href="/tasks/{{_id}}/toggleDone"
              >Fait</a>
            {{else}}
              <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">
                A faire 
              </a>
            {{/if}}
            </td>
            <td>
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">
              Supprimer
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">
              Modifier
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>Aucune Tache</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}
